<div class="container scroll">
	<div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        	<h3>Weather Report</h3>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                   
	<table class="table table-striped table-bordered table-hover dataTables-example"> 
		<thead>
			<tr>
				<th>ID</th>
				<th>min</th>
				<th>max</th>				
				<th>date</th>
				
			</tr>
		</thead>
		<tbody>
			<% @weather_details.each do |weather| %>
			<tr>

				<td><%= weather.id %></td>			
				<td><%= weather.min_temperature %></td>
				<td><%=  weather.max_temperature%></td>
				
				<td>
					<%=  weather.date_time%>
				</td>
				
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>
</div>
<canvas id="myChart" width="400" height="400"></canvas>
<script>
var ctx = document.getElementById("myChart");

var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%= raw @date_times.to_json %>,
        datasets: [{
            label: '# of Votes',
            data: <%= @temp%>,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
	
</div>


